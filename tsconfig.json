{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ]
}
